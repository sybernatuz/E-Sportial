{% extends 'base.html.twig' %}

{% block title %}Users list{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('users') }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col s12 m12 l12 xl12">
            {{ form_start(form) }}
            <div class="row">
                <div class="input-field col s8 m8 l8 xl8">
                    {{ form_label(form.word) }}
                    {{ form_widget(form.word) }}
                    <div class="form-errors">
                        {{ form_errors(form.word) }}
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s4 m4 l4 xl4">
                        {{ form_widget(form.country) }}
                        {{ form_label(form.country) }}
                        <div class="form-errors">
                            {{ form_errors(form.word) }}
                        </div>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col s3 m3 l3 xl3">
                    <button class="btn waves-effect waves-light" type="submit">
                        {% trans %}Search{% endtrans %}
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
            <div class="col s12 m12 l12 xl12 right-align">
                {% include "modules/front/user/sortable.html.twig" %}
            </div>
        </div>
    </div>
    <div class="row">
        {% for user in users %}
            <div class="col s4 m4 l4 xl4">
                {% include "modules/front/user/user.html.twig" %}
            </div>
        {% endfor %}
    </div>

    <div class="row">
        <div class="col s12 m12 l12 xl12">
            {{ knp_pagination_render(users) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('users') }}
{% endblock %}

