{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {% if error %}
        <div class="row">
            <div class="col s10 m8 l8 xl8 offset-s1 offset-m2 offset-l2 offset-xl2">
                <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
            </div>
        </div>
    {% endif %}

    <div class="row">
        {{ form_start(form) }}
            <div class="row">
                <div class="input-field col s6 m6 l6 xl6">
                    {{ form_label(form._login_username) }}
                    {{ form_errors(form._login_username) }}
                    {{ form_widget(form._login_username) }}
                </div>
            </div>

            <div class="row">
                <div class="input-field col s6 m6 l6 xl6">
                    {{ form_label(form._login_password) }}
                    {{ form_errors(form._login_password) }}
                    {{ form_widget(form._login_password) }}
                </div>
            </div>

            <div class="row">
                <div class="input-field col s6 m6 l6 xl6">
                    {{ form_widget(form.login) }}
                </div>
            </div>

            <div class="row">
                <div class="col s6 m6 l6 xl6">
                    <a href="">Forgotten ?</a>
                </div>
                <div class="col s6 m6 l6 xl6">
                    Not yet registered ? <a href="">Register</a>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
