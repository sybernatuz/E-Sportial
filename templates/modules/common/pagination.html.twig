{% if pageNumber is defined and pageNumber > 0 %}
    <ul class="pagination">
        <li class="disabled"><a><i class="material-icons">chevron_left</i></a></li>
        {% for i in 1..pageNumber %}
            {% set isActive = activePage is defined and activePage == i or activePage is not defined and i == 1 %}
            <li class="page waves-effect {{ isActive ? 'active'}}" id="{{ i }}">
                <a>{{ i }}</a>
            </li>
        {% endfor %}
        <li class="waves-effect"><a><i class="material-icons">chevron_right</i></a></li>
    </ul>
{% endif %}