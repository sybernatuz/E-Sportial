{{ form_start(gameForm) }}
<div class="row">
    <div class="input-field col s12 m8 l8 xl8">
        {{ form_widget(gameForm.name) }}
        {{ form_label(gameForm.name) }}
        <div class="form-errors">
            {{ form_errors(gameForm.name) }}
        </div>
    </div>
    <div class="input-field col s12 m4 l4 xl4">
        <div class="switch">
            <label>
                Disable
                {{ form_widget(gameForm.enable) }}
                <span class="lever"></span>
                Enable
            </label>
        </div>
    </div>
    <div class="input-field col s12 m12 l12 xl12">
        {{ form_widget(gameForm.description) }}
        {{ form_label(gameForm.description) }}
        <div class="form-errors">
            {{ form_errors(gameForm.description) }}
        </div>
    </div>
    <div class="input-field col s12 m12 l12 xl12">
        {{ form_widget(gameForm.apiUrl) }}
        {{ form_label(gameForm.apiUrl) }}
        <div class="form-errors">
            {{ form_errors(gameForm.apiUrl) }}
        </div>
    </div>
    <div class="file-field input-field col s12 m12 l12 xl12">
        <div class="btn">
            <span>Image</span>
            {{ form_widget(gameForm.posterFile) }}
        </div>
        <div class="file-path-wrapper">
            {{ form_widget(gameForm.posterPath) }}
        </div>
        <div class="form-errors">
            {{ form_errors(gameForm.posterFile) }}
        </div>
    </div>
</div>
<div class="row">
    <div class="col s12 m12 l12 xl12 right-align">
        {{ form_widget(gameForm.submit) }}
    </div>
</div>
{{ form_end(gameForm) }}