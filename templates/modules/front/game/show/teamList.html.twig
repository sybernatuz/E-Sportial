<div class="team-list">
    <h2>Teams</h2>
    {% for roster in game.rosters %}
        <div class="col s12 m6 l3">
            <a href="{{ path('app_team_show', {"slug": roster.organization.slug}) }}">
                <div class="card">
                    <div class="card-image">
                        <img src="{{ roster.organization.logoPath }}" alt="{{ roster.organization.name }}">
                    </div>
                    <div class="card-content">
                        <div class="center-align">
                            <span>{{ roster.organization.name }}</span>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    {% endfor %}
</div>