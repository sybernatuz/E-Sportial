<div id="member-details" class="col s12 m12 l12 xl12">
    <div class="row">
        <div class="col s4 m4 l4 xl4">
            <img alt="Avatar" width="100" src="{{ asset(user.avatar) }}">
        </div>
        <div class="col s8 m8 l8 xl8">
            <div class="row">
                <div class="row">
                    <div class="col s12 m12 l12 xl12">
                        <span><strong>{{ user.username }}</strong></span>
                    </div>
                    <div class="col s3 m3 l3 xl3">
                         {% if not user.teamOwner and app.user.teamOwner %}
                             <a href="{{ path("app_team_ajax_remove_member", {id: team.id, userId: user.id}) }}" class="waves-effect waves-light btn">
                                 <i class="material-icons left">delete</i>
                                 Remove
                             </a>
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="col s12 m12 l12 xl12">
                        <span>
                            {% if user.teamOwner %}
                                Admin
                            {% else %}
                                Member
                            {% endif %}
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12 m12 l12 xl12">
                        <img width="30" alt="Flag image" src="{{ asset(user.country.flagPath) }}">
                        <span>{{ asset(user.country.name) }}</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s12 m12 l12 xl12">
                    <span>{{ user.subscriptions|length }} {% trans %}followers{% endtrans %}</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>
                {{ user.description }}
            </p>
        </div>
    </div>
</div>
