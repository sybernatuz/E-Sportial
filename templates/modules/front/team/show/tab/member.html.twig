<div class="row" style="margin-bottom: 0">
    <div class="col s12 m12 l12 xl12 card-member" data-user-id="{{ user.id }}">
        <div class="card horizontal hoverable">
            <div  style="padding-left: 10px" class="card-image">
                <img alt="Avatar" style="width: 150px; transform: translateY(-50%); position: relative; top: 50%"  src="{{ asset(user.avatar) }}">
            </div>
            <div class="card-stacked">
                <div class="card-content">
                    <div class="row">
                        <div class="col s12 m12 l12 xl12">
                            <span><strong>{{ user.username }}</strong></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12 m12 l12 xl12">
                            <img alt="Flag image" width="30" src="{{ asset(user.country.flagPath) }}">
                            <span>{{ asset(user.country.name) }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

